{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchPackageNames": [
        "turbo",
        "pnpm"
      ],
      "enabled": true,
      "groupName": "build tooling"
    },
    {
      "matchPackageNames": ["expo"],
      "enabled": true,
      "groupName": "expo",
      "automerge": false
    }
  ]
}
